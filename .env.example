# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
RABBITMQ_PROCESSING_QUEUE=video.processing
RABBITMQ_STATUS_QUEUE=video.status
RABBITMQ_DLQ=video.processing.dlq
RABBITMQ_EXCHANGE=fiapx.video
RABBITMQ_PREFETCH=5

# MinIO
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_UPLOAD_BUCKET=uploads
MINIO_ZIP_BUCKET=zips

# PostgreSQL
DATABASE_URL=postgresql://job_user:job_pass@postgres-jobs:5432/jobs?sslmode=disable

# Worker
WORKER_COUNT=3
WORKER_MAX_RETRIES=7
WORKER_RETRY_BASE_DELAY_MS=1000

# FFmpeg
FFMPEG_FPS=1
FFMPEG_FORMAT=png

# Email (MailHog)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_FROM=noreply@fiapx.local
NOTIFICATION_TO=admin@fiapx.local

# Observability
METRICS_PORT=8083
JAEGER_ENDPOINT=http://jaeger:4318/v1/traces
LOG_LEVEL=info

# Temp dir for frame extraction
TEMP_DIR=/tmp/fiapx
